{
  "name": "package-size-inline",
  "displayName": "Package Size Inline",
  "description": "Shows package sizes (weight) inline next to dependencies in package.json",
  "version": "0.1.1",
  "publisher": "El1k-1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Package Size Inline",
      "properties": {
        "packageSizeInline.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline package size display"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "buildvsix": "vsce"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0"
  }
}
